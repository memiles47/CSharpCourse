<Window x:Class="CSharpCourseLecture90.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpCourseLecture90"
        mc:Ignorable="d"
        Title="CSharp Course - Lecture: 90" Height="350" Width="525">
    <Grid Background="Bisque" Margin="0,0,0,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tb_filesBox" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btn_getFile" Content="Get File" Margin="10,38,10,0" VerticalAlignment="Top" Click="button_Click"/>
        <RichTextBox x:Name="rtb_displayBox" Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="10,10,10,10.5">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
